<view class="register-container">
  <view class="logo-section">
    <view class="logo-icon">🚀</view>
    <view class="app-name">Rocket</view>
    <view class="welcome-text">注册新账号</view>
    <view class="subtitle">填写信息完成注册</view>
  </view>

  <view class="register-form">
    <view class="form-group">
      <view class="input-wrapper">
        <input 
          class="form-input" 
          placeholder="请输入用户名"
          value="{{form.username}}"
          bindinput="onUsernameInput"
          placeholder-class="input-placeholder"
        />
      </view>
    </view>

    <view class="form-group">
      <view class="input-wrapper">
        <input 
          class="form-input" 
          placeholder="请输入邮箱"
          value="{{form.email}}"
          bindinput="onEmailInput"
          placeholder-class="input-placeholder"
        />
      </view>
    </view>

    <view class="form-group">
      <view class="input-wrapper">
        <input 
          class="form-input" 
          placeholder="请输入手机号"
          value="{{form.phone}}"
          bindinput="onPhoneInput"
          placeholder-class="input-placeholder"
        />
      </view>
    </view>

    <view class="form-group">
      <view class="input-wrapper">
        <input 
          class="form-input" 
          placeholder="请输入密码"
          password="{{true}}"
          value="{{form.password}}"
          bindinput="onPasswordInput"
          placeholder-class="input-placeholder"
        />
      </view>
    </view>

    <view class="form-group">
      <view class="input-wrapper">
        <input 
          class="form-input" 
          placeholder="请再次输入密码"
          password="{{true}}"
          value="{{form.confirmPassword}}"
          bindinput="onConfirmPasswordInput"
          placeholder-class="input-placeholder"
        />
      </view>
    </view>

    <button 
      class="register-btn {{isLoading ? 'btn-disabled' : ''}}" 
      bindtap="handleRegister"
      disabled="{{isLoading}}"
    >
      <text wx:if="{{!isLoading}}">注册</text>
      <text wx:else>注册中...</text>
    </button>

    <view class="login-link">
      <text class="login-text" bindtap="goToLogin">已有账号？立即登录</text>
    </view>
  </view>
</view>

<view class="loading-overlay" wx:if="{{isLoading}}">
  <view class="loading-content">
    <view class="loading-spinner"></view>
    <text class="loading-text">正在注册...</text>
  </view>
</view>