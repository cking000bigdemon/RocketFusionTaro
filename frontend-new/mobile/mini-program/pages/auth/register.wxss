.register-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  box-sizing: border-box;
}

.logo-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
  margin-bottom: 60rpx;
}

.logo-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.05); }
}

.app-name {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.welcome-text {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  text-shadow: 1rpx 1rpx 4rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  text-shadow: 1rpx 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

.register-form {
  background: white;
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(16rpx);
}

.form-group {
  margin-bottom: 32rpx;
}

.input-wrapper {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 32rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #191919;
  background-color: #ffffff;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.form-input:focus {
  border-color: #07c160;
  outline: none;
}

.input-placeholder {
  color: #888888;
}

.register-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
  margin: 40rpx 0 24rpx 0;
}

.register-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.register-btn.btn-disabled {
  opacity: 0.6;
  transform: none !important;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2);
}

.login-link {
  text-align: center;
  margin-top: 24rpx;
}

.login-text {
  font-size: 28rpx;
  color: #07c160;
  text-decoration: underline;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.login-text:active {
  opacity: 0.7;
}

.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  padding: 60rpx 40rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #888888;
}

.register-container {
  padding-top: calc(40rpx + env(safe-area-inset-top));
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

@media (max-height: 700px) {
  .logo-section {
    margin-bottom: 40rpx;
  }
  
  .logo-icon {
    font-size: 80rpx;
    margin-bottom: 16rpx;
  }
  
  .app-name {
    font-size: 36rpx;
    margin-bottom: 8rpx;
  }
  
  .welcome-text {
    font-size: 26rpx;
  }
  
  .subtitle {
    font-size: 22rpx;
  }
  
  .form-group {
    margin-bottom: 24rpx;
  }
}