/* register.wxss */

/* AI科技蓝主题配色系统 */
.register-scroll-container {
  /* 主色调：科技蓝色系 */
  --primary-dark: #0a0e1a;      /* 深空蓝 - Logo背景呼应 */
  --primary-color: #1e3a8a;     /* 电路蓝 - 主要交互元素 */
  --primary-light: #3b82f6;     /* 科技蓝 - Logo线条呼应 */
  --primary-accent: #60a5fa;    /* 亮蓝 - 高亮强调 */
  --primary-highlight: #93c5fd; /* 冰蓝 - 次要强调 */
  
  /* 科技感渐变背景 */
  --tech-gradient: linear-gradient(135deg, #0a0e1a 0%, #1e293b 50%, #334155 100%);
  --tech-gradient-enhanced: 
    radial-gradient(circle at 20% 80%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(96, 165, 250, 0.08) 0%, transparent 50%),
    linear-gradient(135deg, #0a0e1a 0%, #1e293b 100%);
  
  /* 功能色系 */
  --success-color: #10b981;     /* 科技绿 */
  --warning-color: #f59e0b;     /* 琥珀色 */
  --error-color: #ef4444;       /* 红色 */
  --info-color: #60a5fa;        /* 亮蓝 */
  
  /* 文字色系 - 深色背景优化 */
  --text-primary: #f8fafc;      /* 几乎白色，最佳对比度 */
  --text-secondary: #cbd5e1;    /* 浅灰蓝，良好可读性 */
  --text-tertiary: #94a3b8;     /* 中等灰蓝，适合说明文字 */
  --text-link: #60a5fa;         /* 亮蓝，与Logo呼应 */
  --text-accent: #93c5fd;       /* 冰蓝，突出重要信息 */
  
  /* 背景色系 */
  --bg-primary: #0a0e1a;        /* 主背景 */
  --bg-secondary: #1e293b;      /* 次要背景 */
  --bg-tertiary: #334155;       /* 第三层背景 */
  --surface-glass: rgba(30, 41, 59, 0.9); /* 毛玻璃表面 */
  --surface-input: rgba(30, 41, 59, 0.8);  /* 输入框背景 */
  
  /* 边框色系 */
  --border: rgba(59, 130, 246, 0.3);       /* 主边框 */
  --border-light: rgba(59, 130, 246, 0.2); /* 浅边框 */
  --border-focus: #60a5fa;                  /* 焦点边框 */
  
  /* 阴影系统 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.4);
  --shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.5);
  --shadow-brand: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
  --shadow-tech: 0 4rpx 12rpx rgba(59, 130, 246, 0.2);

  height: 100vh;
  background: var(--tech-gradient-enhanced);
}

.register-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  padding-top: calc(40rpx + env(safe-area-inset-top));
  padding-bottom: calc(60rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.logo-section {
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: var(--text-primary);
  margin-bottom: 48rpx;
  margin-top: 32rpx;
  min-height: 240rpx;
}

.logo-image {
  width: 220rpx;
  height: 110rpx;
  margin-bottom: 20rpx;
  animation: breathe 3s ease-in-out infinite;
  filter: drop-shadow(0 8rpx 24rpx rgba(59, 130, 246, 0.5)) 
          drop-shadow(0 0 12rpx rgba(96, 165, 250, 0.3));
  border-radius: 16rpx;
  /* AI电路板Logo增强光效，与科技蓝主题融合 */
}

@keyframes breathe {
  0%, 100% { 
    opacity: 1; 
    transform: scale(1) rotate(0deg);
    filter: drop-shadow(0 8rpx 24rpx rgba(59, 130, 246, 0.5)) 
            drop-shadow(0 0 12rpx rgba(96, 165, 250, 0.3));
  }
  50% { 
    opacity: 0.95; 
    transform: scale(1.04) rotate(1deg);
    filter: drop-shadow(0 12rpx 32rpx rgba(59, 130, 246, 0.6)) 
            drop-shadow(0 0 16rpx rgba(96, 165, 250, 0.4));
  }
}

.app-name {
  font-size: 42rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  text-shadow: 0 0 20rpx rgba(59, 130, 246, 0.5);
  letter-spacing: 2rpx;
  background: linear-gradient(135deg, var(--text-primary) 0%, var(--text-accent) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.welcome-text {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
  color: var(--text-secondary);
  text-shadow: 0 0 15rpx rgba(59, 130, 246, 0.3);
}

.subtitle {
  font-size: 22rpx;
  color: var(--text-tertiary);
  text-shadow: 0 0 10rpx rgba(59, 130, 246, 0.2);
  line-height: 1.4;
  max-width: 480rpx;
}

.register-form {
  background: var(--surface-glass);
  border-radius: 32rpx;
  padding: 48rpx 34rpx;
  box-shadow: var(--shadow-lg);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid var(--border-light);
}

.form-group {
  margin-bottom: 28rpx;
}

.input-wrapper {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.form-input {
  width: 100%;
  height: 84rpx;
  padding: 0 26rpx;
  border: 2rpx solid var(--border);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  background-color: var(--surface-input);
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.form-input:focus {
  border-color: var(--border-focus);
  outline: none;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.15);
  transform: translateY(-2rpx);
}

.input-placeholder {
  color: var(--text-tertiary);
}

.register-btn {
  width: 100%;
  height: 84rpx;
  background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary-color) 100%);
  color: var(--text-primary);
  border: none;
  border-radius: 42rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-brand);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  margin: 36rpx 0 20rpx 0;
}

.register-btn:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-md);
}

.register-btn.btn-disabled {
  opacity: 0.6;
  transform: none !important;
  box-shadow: var(--shadow-sm);
}

.login-link {
  text-align: center;
  margin-top: 20rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid var(--border-light);
}

.login-text {
  font-size: 26rpx;
  color: var(--primary-accent);
  text-decoration: underline;
  cursor: pointer;
  transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.login-text:active {
  opacity: 0.7;
}

.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  backdrop-filter: blur(4rpx);
}

.loading-content {
  background: var(--surface-glass);
  padding: 48rpx 32rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: var(--shadow-lg);
  border: 1rpx solid var(--border-light);
}

.loading-spinner {
  width: 56rpx;
  height: 56rpx;
  border: 3rpx solid var(--border-light);
  border-top-color: var(--primary-light);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 响应式布局优化 */

/* 小屏幕适配 */
@media (max-height: 600px) {
  .logo-section {
    margin-bottom: 32rpx;
    margin-top: 20rpx;
    min-height: 180rpx;
  }
  
  .logo-image {
    width: 160rpx;
    height: 80rpx;
    margin-bottom: 16rpx;
  }
  
  .app-name {
    font-size: 36rpx;
    margin-bottom: 8rpx;
  }
  
  .welcome-text {
    font-size: 24rpx;
  }
  
  .subtitle {
    font-size: 20rpx;
  }
  
  .register-form {
    padding: 36rpx 28rpx;
  }
  
  .form-group {
    margin-bottom: 24rpx;
  }
}

/* 长屏设备适配 */
@media (min-height: 750px) {
  .register-container {
    padding-top: calc(60rpx + env(safe-area-inset-top));
    padding-bottom: calc(80rpx + env(safe-area-inset-bottom));
  }
  
  .logo-section {
    margin-bottom: 60rpx;
    margin-top: 48rpx;
    min-height: 280rpx;
  }
  
  .logo-image {
    width: 260rpx;
    height: 130rpx;
    margin-bottom: 24rpx;
  }
  
  .register-form {
    padding: 60rpx 42rpx;
  }
  
  .form-group {
    margin-bottom: 36rpx;
  }
}

/* 横屏适配 */
@media (orientation: landscape) {
  .register-scroll-container {
    height: 100vh;
  }
  
  .register-container {
    min-height: auto;
    flex-direction: row;
    align-items: flex-start;
    padding: 32rpx 60rpx;
  }
  
  .logo-section {
    flex: 1;
    margin-bottom: 0;
    margin-right: 48rpx;
    margin-top: 16rpx;
    min-height: auto;
  }
  
  .register-form {
    flex: 1;
    max-width: 560rpx;
  }
}