@media screen and (min-height: 850px) and (-webkit-device-pixel-ratio: 3) {
  .ai-hero-section {
    padding-top: 180rpx;
    padding-top: calc(180rpx + constant(safe-area-inset-top));
    padding-top: calc(180rpx + env(safe-area-inset-top));
  }
}

@media screen and (max-width: 375px) {
  .ai-brand-title {
    font-size: 48rpx;
  }
  
  .ai-features-grid {
    gap: 20rpx;
  }
  
  .ai-feature-card {
    padding: 30rpx 20rpx;
  }
}

