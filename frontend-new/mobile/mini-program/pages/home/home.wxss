.ai-home-container {
  min-height: 100vh;
  min-height: calc(100vh - env(safe-area-inset-bottom));
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
  position: relative;
  overflow-x: hidden;
}

.ai-hero-section {
  padding: 40rpx 48rpx;
  padding-top: 140rpx;
  padding-top: calc(140rpx + constant(safe-area-inset-top));
  padding-top: calc(140rpx + env(safe-area-inset-top));
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
}

.ai-hero-section::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(255, 255, 255, 0.1) 100%);
}

.ai-brand-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: white;
  text-align: center;
}

.ai-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
  position: relative;
}

.ai-logo-icon {
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  position: relative;
}

.ai-logo-icon::before {
  content: 'ü§ñ';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 60rpx;
}

.ai-brand-title {
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  display: block;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.ai-brand-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
  font-weight: 400;
}

.ai-user-card {
  margin: -20rpx 32rpx 32rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.15);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.ai-user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.ai-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.ai-avatar-text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.ai-avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.ai-user-details {
  display: flex;
  flex-direction: column;
}

.ai-user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.ai-user-status {
  font-size: 24rpx;
  color: #666;
}

.ai-status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #52C41A;
  box-shadow: 0 0 12rpx rgba(82, 196, 26, 0.5);
}

.ai-features-grid {
  padding: 0 32rpx 32rpx 32rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.ai-feature-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 36rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.ai-feature-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.ai-feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.ai-feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  box-shadow: 0 6rpx 20rpx rgba(240, 147, 251, 0.3);
}

.ai-icon-text {
  font-size: 40rpx;
}

.ai-feature-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.ai-feature-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

.ai-quick-actions {
  padding: 0 32rpx 60rpx 32rpx;
}

.ai-quick-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.ai-quick-btn::after {
  border: none;
}

.ai-btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.ai-btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 16rpx rgba(102, 126, 234, 0.4);
}

@keyframes ai-glow {
  0% { box-shadow: 0 0 10rpx rgba(102, 126, 234, 0.3); }
  50% { box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.5); }
  100% { box-shadow: 0 0 10rpx rgba(102, 126, 234, 0.3); }
}

.ai-logo-icon {
  animation: ai-glow 3s ease-in-out infinite;
}

