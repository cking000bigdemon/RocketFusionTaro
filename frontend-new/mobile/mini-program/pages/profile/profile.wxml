<view class="profile-container">
  <!-- 用户信息区域 -->
  <view class="user-info-section">
    <view class="user-avatar" bindtap="onAvatarTap">
      <image wx:if="{{userInfo.avatar_url}}" class="avatar-image" src="{{userInfo.avatar_url}}" mode="aspectFill" />
      <text wx:else class="avatar-text">{{(userInfo.display_name || userInfo.username || '未知').charAt(0).toUpperCase()}}</text>
      <view class="avatar-overlay">
        <text class="avatar-tip">点击更新</text>
      </view>
    </view>
    <view class="user-details">
      <text class="username">{{userInfo.display_name || userInfo.username || '未知用户'}}</text>
      <text class="user-id">ID: {{userInfo.id || 'N/A'}}</text>
    </view>
  </view>

  <!-- 功能菜单区域 -->
  <view class="menu-section">
    <view 
      class="menu-item" 
      wx:for="{{menuItems}}" 
      wx:key="id"
      data-id="{{item.id}}"
      bindtap="onMenuItemTap"
    >
      <text class="menu-icon">{{item.icon}}</text>
      <text class="menu-title">{{item.title}}</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <!-- 退出登录按钮 -->
  <view class="logout-section">
    <button class="logout-btn" bindtap="onLogout">退出登录</button>
  </view>
</view>