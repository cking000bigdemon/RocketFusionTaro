.profile-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 0 24rpx;
}

.user-info-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 32rpx 0;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(45deg, #07c160, #06b050);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.avatar-text {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: 600;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.user-id {
  font-size: 28rpx;
  color: #888888;
}

.menu-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 32rpx 0;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  font-size: 32rpx;
}

.menu-title {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.menu-arrow {
  color: #cccccc;
  font-size: 32rpx;
  font-weight: 300;
}

.logout-section {
  padding: 64rpx 0;
  display: flex;
  justify-content: center;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background-color: #fa5151;
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.3s ease;
}

.logout-btn:active {
  background-color: #e74c3c;
}

.logout-btn::after {
  border: none;
}